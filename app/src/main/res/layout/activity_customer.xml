<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhuzh.a6200finalwithfirebase.AndroidActivities.CustomerActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/testUserInfotUserInfo"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_margin="5dp"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/ivFoodImage_1"
            android:layout_width="27dp"
            android:layout_height="72dp"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/burger" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvFoodName_1"
                    android:text="Burger"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFoodPrice_1"
                    android:text="$7.15"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:weightSum="15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cart_minus_img"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:onClick="decreaseInteger"
                    android:src="@drawable/minus" />

                <TextView
                    android:id="@+id/etFoodQty_1"
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/cart_plus_img"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:onClick="increaseInteger"
                    android:src="@drawable/plus" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_margin="5dp"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/ivFoodImage_2"
            android:layout_width="27dp"
            android:layout_height="72dp"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/img_chicken" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvFoodName_2"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Chickens"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFoodPrice_2"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="$7.80"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:weightSum="15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cart_minus_img2"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:onClick="decreaseInteger2"
                    android:src="@drawable/minus" />

                <TextView
                    android:id="@+id/etFoodQty_2"
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/cart_plus_img2"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:onClick="increaseInteger2"
                    android:src="@drawable/plus" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_margin="5dp"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/ivFoodImage_3"
            android:layout_width="27dp"
            android:layout_height="72dp"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/french_fries" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvFoodName_3"
                    android:text="French Fries"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFoodPrice_3"
                    android:text="$2.60"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:weightSum="15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cart_minus_img3"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:onClick="decreaseInteger3"
                    android:src="@drawable/minus" />

                <TextView
                    android:id="@+id/etFoodQty_3"
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/cart_plus_img3"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:onClick="increaseInteger3"
                    android:src="@drawable/plus" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_margin="5dp"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/ivFoodImage_4"
            android:layout_width="27dp"
            android:layout_height="72dp"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/onion_ring" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvFoodName_4"
                    android:text="Onion Rings"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFoodPrice_4"
                    android:text="$3.25"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:weightSum="15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cart_minus_img4"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:onClick="decreaseInteger4"
                    android:src="@drawable/minus" />

                <TextView
                    android:id="@+id/etFoodQty_4"
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/cart_plus_img4"
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:onClick="increaseInteger4"
                    android:src="@drawable/plus" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/total_price"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"/>
    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSendOrder"
        android:text="Submit the Order!"
        android:onClick="onClickSubmit"/>

    <info.hoang8f.widget.FButton
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Submited Orders"
        android:onClick="onClickViewSubmitOrder"/>

</LinearLayout>
