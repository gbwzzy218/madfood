<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhuzh.a6200finalwithfirebase.AndroidActivities.InventoryActivity"
    android:background="@drawable/background">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_margin="5dp"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/invenFoodImage_1"
            android:layout_width="27dp"
            android:layout_height="72dp"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/burger" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/invenFoodName_1"
                    android:text="Burger"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/invenFoodPrice_1"
                    android:text="$5.50"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:weightSum="15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Qty"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/invenFoodQty_1"
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_margin="5dp"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/invenFoodImage_2"
            android:layout_width="27dp"
            android:layout_height="72dp"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/img_chicken" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/invenFoodName_2"
                    android:text="Chickens"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/invenFoodPrice_2"
                    android:text="$6.00"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:weightSum="15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Qty"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/invenFoodQty_2"
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_margin="5dp"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/invenFoodImage_3"
            android:layout_width="27dp"
            android:layout_height="72dp"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/french_fries" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/invenFoodName_3"
                    android:text="French Fries"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/invenFoodPrice_3"
                    android:text="$2.00"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:weightSum="15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Qty"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/invenFoodQty_3"
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_margin="5dp"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/invenFoodImage_4"
            android:layout_width="27dp"
            android:layout_height="72dp"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/onion_ring" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/invenFoodName_4"
                    android:text="Onion Rings"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/invenFoodPrice_4"
                    android:text="$5.50"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                android:weightSum="15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Qty"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/invenFoodQty_4"
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Force Burger"
            android:onClick="onClickForceBurger"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Force Chicken"
            android:onClick="onClickForceChicken"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Force Fries"
            android:onClick="onClickForceFries"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Force Onions"
            android:onClick="onClickForceOnion"/>
    </LinearLayout>
</LinearLayout>
